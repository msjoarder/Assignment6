<div class="row">
  <div class="col-md-12">
    <h2>Courses</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Course Code</th>
            <th>Course Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr>
            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
            <td>{{this.courseDescription}}</td>
            <td>
              <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">remove</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{#unless courses}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/unless}}
  </div>
</div>
